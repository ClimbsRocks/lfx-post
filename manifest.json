{
  "name": "Share with Letsfix.net",
  "description": "Post the current URL to letsfix.net",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ],
  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" },
  "browser_action": {
      "default_title": "LFx this page.",
      "default_icon": "icon48.png"
  },
  "manifest_version": 1
}
